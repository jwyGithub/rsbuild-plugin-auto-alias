{
    "extends": "@jiangweiye/tsconfig/tsconfig.node.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "ESNext"],
        "baseUrl": "./",
        "resolveJsonModule": true,
        "strict": true,
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
